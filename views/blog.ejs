<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head')%>
        <title>blog</title>
</head>

<body>
   
    <%- include('./partials/nav')%>
    <div class="container mt-4">
      
        <h1><%= blog?.title %></h1>
        <img src="<%=blog?.coverImageURL%>" width="500px"/>
        <pre><%=blog?.body%></pre>
  

      
        <img src="<%=blog?.createdBy.profileImageURL%>" width="60px" style="height: 50px;"/>
        <h6><%= blog?.createdBy.fullName %></h6>
         <br>
        <h4>comment</h4>
        <hr>
        <% comments.forEach(comment =>{ %>  
            
      <div >
          <img src="<%=comment?.createdBy.profileImageURL%>" class="card-img-top" width="50px" alt="...">
          <% comment?.createdBy.fullName%>
          <pre>comments.contents</pre>
        </div>
       
        <% }) %>

       <%if(locals.user) {%>
        <form action="/comment/blogId" method="post" >
            <div class="mb-3">
              <label for="comment" class="form-label"></label>
              <input type="text" class="form-control" id="comment"name="content" placeholder="Enter your comment">
             
          </div>
         
        
          <button type="submit" class="btn btn-primary">Add</button>
            </form>

          <% } %>  
    </div>
    <%- include('./partials/script')%>

</body>

</html>